SELECT * FROM BADGES ORDER BY BADGE_TYPE;

--What are average, max, and min values in the data?
SELECT badge_type, AVG(energy_points) as avg_points FROM badges GROUP BY badge_type;
SELECT badge_type, MAX(energy_points) as max_points FROM badges;
SELECT badge_type, MIN(energy_points) as min_points FROM badges;

--How many numbers per category in the data?
SELECT badge_type, SUM(energy_points) as total_points FROM badges GROUP BY badge_type HAVING total_points > 10000;

--What ways are there to group the data values that donâ€™t exist yet?
SELECT COUNT(*),
    CASE
        WHEN energy_points > 10000 THEN "The quantity is greater than 10,000"
            WHEN energy_points < 10000 THEN "The quantity is greater than 1,000"
        END AS "points_category"
FROM BADGES GROUP BY points_category;

--What interesting ways are there to filter the data?
SELECT * FROM badges WHERE badge_type='Sun'AND energy_points > 0 OR badge_type='Earth'AND energy_points > 0;
